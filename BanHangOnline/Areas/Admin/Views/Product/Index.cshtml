@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Danh sách sản phẩm";
}
<h3>Danh sách sản phẩm</h3>
<a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Quantity</th>
            <th scope="col">Product Categories</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Product Manage</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td><img src="~/media/products/@item.Image" width="120" /> </td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.Categories.Name</td>
                <td>@item.Brand.Name</td>      
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>